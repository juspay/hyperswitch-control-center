{
  "name": "editor-ui",
  "jsx": {
    "version": 4,
    "mode": "classic"
  },
  "bsc-flags": ["-bs-super-errors"],
  "sources": [
    {
      "dir": "../src",
      "subdirs": true
    },
    {
      "dir": "../tests",
      "subdirs": true,
      "type": "dev"
    }
  ],
  "suffix": ".bs.js",
  "namespace": true,
  "ppx-flags": [],
  "package-specs": {
    "module": "commonjs",
    "in-source": true
  },
  "bs-dev-dependencies": ["@glennsl/rescript-jest"],
  "bs-dependencies": [
    "@rescript/react",
    "rescript-webapi",
    "bs-fetch",
    "@ryyppy/rescript-promise",
    "rescript-debounce-react"
  ]
}
